<script>
    const rawData = "1å¼µåšå½¥2è¨±æ±ç”·3éƒ­ä¹ƒå®4é»ƒæ£®è±5æå§¸éœ6é™³é€¸å‹³7æ›¾å®‰å¿—8é‚±æ•¬å©·9è”¡ä¿Šé›„10é»ƒç¾çœŸ11ä¾¯å½¥å»·12é»ƒè‡´è13æ—æ°¸æ˜‡14å‘¨æ˜±ä¼¶15é»ƒæ€¡åª›16æå®œèŠ³17æ½˜é †ç¾©18é»ƒå½¥é›„19æ¥Šå§å§20æ–½é›…é›¯21é™³æƒ çœŸ22é­ç‘å®23é™³æ˜å®24è”¡ä¸–å®25é»ƒç‘æ€œ26æ›¾ç‰å¦‚27è¨±éŠ˜å¨Ÿ28ç‹æœæš29é„’æ—»è»’30é»ƒä½‘å©·31ç›§å®—æ¥­32é‚±å”¯å‚‘33ç‹å·§æŸ”34å´”æ·‘èŠ³35å¼µç‚ºéˆ36æ¥Šæ·‘å„€37ç¾…ä¼Šå©·38åš´æ„æ±39æéº—æ˜¥40å³ç¾ç´41è¨±æ™ºå®‡42æ›¾æ˜¥è˜­43é¡æ·‘èŠ¬44æ­¦å‚è“‰45é™³ç‡¦å ¯46æ¥Šè²´æ£®47å‘‚æ­¦å…¸48ç‹å¥•è¶…49é™³å®œæ¨º50é»ƒæ˜æ™º51æ›¹éŠ˜ä»‹52é»ƒéŠ˜è³¢53é»ƒå¿—æ–¹54è¨±æ•¦çš“55å¸«æ­£é­56æ´ªå°æ¦®57æ—å¿—æ¾¤58ç‹ä¿Šå ¯59è¬æ˜ä»60è‘‰å¸å»·61è¨±å®¶æŒ¯62æ–½ç§‰æ—­63é„’é¨°å‚‘64æ—æµ©æ­£65é™³ç›ˆç‘„66æ´ªå®¥ç¥¥67æ²ˆéˆºå©·68å¼µå‡±å®‡69èŠç‚³ç‡¦70é«˜ç‘ç”«71æŸ¯æ”¿è‰¯72æå—æ¯…73æ–½æ™ºæ–‡74æˆ´ç§€èŠ¬75æ—æƒ èŠ³76æ—èŠå®¥77é»ƒéŸ»å˜‰78é»ƒè³œå‰79ç”˜åšé›…80è”¡èœ€åª›81å³ç‰ç²82è”¡æƒ å–»83é¦¬æ˜¥é™½84ç‹æƒ éœ85ææµ¤ç¿86æç’¿ç‰87æ—è–èŠ¬88é‚±åšç‘œ89è©¹åšé›…90é„­æ†¶æ­†91è”£åš´";

    const names = [];
    const matches = rawData.matchAll(/(\d+)([^\d]+)/g);
    for (const match of matches) {
        names.push({ id: match[1], name: match[2] });
    }

    const grid = document.getElementById('nameGrid');
    function renderNames(data) {
        grid.innerHTML = data.map(item => `
            <div class="name-item">
                <span class="id-num">${item.id}</span>
                <span class="name-text">${item.name}</span>
            </div>
        `).join('');
    }

    renderNames(names);

    function filterNames() {
        const query = document.getElementById('nameSearch').value.toLowerCase();
        const filtered = names.filter(item => item.name.toLowerCase().includes(query));
        renderNames(filtered);
    }
</script>

